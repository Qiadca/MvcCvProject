@using MvcCv.Models.Entity
@model List<Tabloiletisim>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                            <div class="card-body">
                                <h2>Gelen Kutusu</h2>
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        @foreach (var x in Model)
                                        {
                                            <!-- timeline time label -->
                                            <div class="time-label">
                                                <span class="bg-info">
                                                    @(((DateTime)x.Tarih).ToString("dd-MMM-yyyy"))
                                                </span>
                                            </div>
                                            <div>
                                                <i class="fas fa-comments bg-warning"></i>
                                                <div class="timeline-item">
                                                    <span class="time"><i class="far fa-clock"></i>@x.Mail</span>
                                                    <h3 class="timeline-header"><a href="#">@x.AdSoyad</a> @x.Konu</h3>
                                                    <div class="timeline-body">
                                                        @x.Mesaj
                                                    </div>

                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <div>
                                    </div>
                                    <div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
    </section>
</body>
</html>
